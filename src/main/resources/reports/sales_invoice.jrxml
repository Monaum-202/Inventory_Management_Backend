<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Rapid_Bill" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <!-- ==================== PARAMETERS ==================== -->
    <parameter name="slNo" class="java.lang.String"/>
    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="customerAddress" class="java.lang.String"/>
    <parameter name="phone" class="java.lang.String"/>
    <parameter name="date" class="java.lang.String"/>
    <parameter name="deliveryDate" class="java.lang.String"/>
    <parameter name="amountInWords" class="java.lang.String"/>
    <parameter name="totalAmount" class="java.lang.Double"/>
    <parameter name="advance" class="java.lang.Double"/>
    <parameter name="dueAmount" class="java.lang.Double"/>

    <!-- ==================== FIELD DECLARATIONS ==================== -->
    <field name="itemName" class="java.lang.String"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="unitPrice" class="java.lang.Double"/>
    <field name="totalPrice" class="java.lang.Double"/>

    <!-- ==================== PAGE HEADER ==================== -->
    <pageHeader>
        <band height="140">

            <!-- RAPID GLOBAL TEXT LOGO -->
            <staticText>
                <reportElement x="0" y="0" width="300" height="30"/>
                <textElement textAlignment="Left">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[RAPID GLOBAL]]></text>
            </staticText>

            <!-- BILL Box -->
            <rectangle>
                <reportElement x="340" y="0" width="80" height="25" backcolor="#000000" mode="Opaque"/>
            </rectangle>
            <staticText>
                <reportElement x="340" y="0" width="80" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[BILL]]></text>
            </staticText>

            <!-- SL No -->
            <staticText>
                <reportElement x="0" y="60" width="80" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Invoice No:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="80" y="60" width="200" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{slNo}]]></textFieldExpression>
            </textField>

            <!-- Name -->
            <staticText>
                <reportElement x="0" y="80" width="80" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Name:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="80" y="80" width="300" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{customerName}]]></textFieldExpression>
            </textField>

            <!-- Phone -->
            <staticText>
                <reportElement x="350" y="60" width="80" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Phone:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="400" y="60" width="300" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{phone} != null ? $P{phone} : ""]]></textFieldExpression>
            </textField>

            <!-- Address -->
            <staticText>
                <reportElement x="0" y="100" width="80" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Address:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="80" y="100" width="300" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{customerAddress} != null ? $P{customerAddress} : ""]]></textFieldExpression>
            </textField>

            <!-- Date -->
            <staticText>
                <reportElement x="350" y="80" width="50" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Date:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="400" y="80" width="100" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{date} != null ? $P{date} : ""]]></textFieldExpression>
            </textField>

            <!-- Delivery Date -->
            <staticText>
                <reportElement x="350" y="100" width="50" height="15"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Delivery Date:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="400" y="100" width="100" height="15"/>
                <textElement/>
                <textFieldExpression><![CDATA[$P{deliveryDate} != null ? $P{deliveryDate} : ""]]></textFieldExpression>
            </textField>

        </band>
    </pageHeader>

    <!-- ==================== COLUMN HEADER (TABLE HEADER) ==================== -->
    <columnHeader>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="25" backcolor="#E0E0E0" mode="Opaque"/>
            </rectangle>

            <staticText>
                <reportElement x="0" y="0" width="40" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Sl. No]]></text>
            </staticText>

            <staticText>
                <reportElement x="40" y="0" width="220" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Description]]></text>
            </staticText>

            <staticText>
                <reportElement x="260" y="0" width="90" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Quantity]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="0" width="90" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Unit Price]]></text>
            </staticText>

            <staticText>
                <reportElement x="440" y="0" width="115" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Amount]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ==================== DETAIL (TABLE ROWS) ==================== -->
    <detail>
        <band height="20">

            <textField textAdjust="StretchHeight">
                <reportElement x="0" y="0" width="40" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$V{REPORT_COUNT}]]></textFieldExpression>
            </textField>

            <textField textAdjust="StretchHeight">
                <reportElement x="40" y="0" width="220" height="20"/>
                <box leftPadding="5">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{itemName}]]></textFieldExpression>
            </textField>

            <textField textAdjust="StretchHeight">
                <reportElement x="260" y="0" width="90" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>

            <textField textAdjust="StretchHeight" pattern="#,##0.00">
                <reportElement x="350" y="0" width="90" height="20"/>
                <box rightPadding="5">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>

            <textField textAdjust="StretchHeight" pattern="#,##0.00">
                <reportElement x="440" y="0" width="115" height="20"/>
                <box rightPadding="5">
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{totalPrice}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ==================== SUMMARY / TOTALS ==================== -->
    <summary>
        <band height="180">

            <!-- Total Amount (aligned with Amount column) -->
            <staticText>
                <reportElement x="250" y="10" width="180" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true" size="11"/>
                </textElement>
                <text><![CDATA[Total Amount]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="440" y="10" width="115" height="20"/>
                <box rightPadding="5">
                    <pen lineWidth="0.5" lineStyle="Solid"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalAmount}]]></textFieldExpression>
            </textField>

            <!-- Advance (aligned with Amount column) -->
            <staticText>
                <reportElement x="250" y="30" width="180" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Advance]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="440" y="30" width="115" height="20"/>
                <box rightPadding="5">
                    <pen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{advance}]]></textFieldExpression>
            </textField>

            <!-- Due Amount (aligned with Amount column) -->
            <staticText>
                <reportElement x="250" y="50" width="180" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true" size="11"/>
                </textElement>
                <text><![CDATA[Due Amount]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="440" y="50" width="115" height="20"/>
                <box rightPadding="5">
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5" lineStyle="Double"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5" lineStyle="Double"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{dueAmount}]]></textFieldExpression>
            </textField>

            <!-- Amount in words -->
            <staticText>
                <reportElement x="0" y="85" width="120" height="15"/>
                <textElement>
                    <font isBold="true" size="10"/>
                </textElement>
                <text><![CDATA[Amount In Words:]]></text>
            </staticText>

            <textField textAdjust="StretchHeight">
                <reportElement x="0" y="105" width="555" height="30"/>
                <box topPadding="2" leftPadding="2"/>
                <textElement>
                    <font isItalic="true" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{amountInWords}]]></textFieldExpression>
            </textField>

            <!-- Signatures -->
            <line>
                <reportElement x="30" y="155" width="120" height="1"/>
            </line>
            <staticText>
                <reportElement x="0" y="160" width="180" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Receiver's Signature]]></text>
            </staticText>

            <line>
                <reportElement x="400" y="155" width="120" height="1"/>
            </line>
            <staticText>
                <reportElement x="375" y="160" width="180" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Authorized Signature]]></text>
            </staticText>

        </band>
    </summary>

</jasperReport>